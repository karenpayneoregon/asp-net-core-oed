@page
@using System.Globalization
@model WebApplication1.Pages.IterateMonthNamesModel
@{
    ViewData["Title"] = "MonthNames";
}

@{
    List<string> MonthNames() => Enumerable.Range(1, 12).Select((index) => DateTimeFormatInfo.CurrentInfo.GetMonthName(index)).ToList();
}


<head>
    <title>Iterate months</title>
    <script src="~/local/IterateMonthNames.js"></script>
    <link href="~/local/IterateMonthNames.css" rel="stylesheet" />
</head>


<div class="text-center">
    <h1 class="display-4 text-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
        </svg>&nbsp;Simple foreach example&nbsp;<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
        </svg>
    </h1>

</div>

<div class="container">

    <input type="button" id="dummy" class="btn btn-primary mb-5" value="Click me" />

    <table class="table table-bordered table-dark">
        @foreach (var item in MonthNames())
        {
            <tr>
                <td class="text-white font-weight-bold">
                    @Html.DisplayFor(modelItem => item)
                </td>

            </tr>
        }

    </table>

</div>

<div class="container">
    <input type="button" class="btn btn-primary" value="Hello Me"/>
</div>



<div class="modal fade" id="exampleDialog1">

    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Simple foreach demo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <p><span class="bi bi-check"></span> Keep in mind this is a simple demo and code is not as it should be in classes</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>

</div>

